{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "sourceMap": true,
    "pretty": true,
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": [
    "src/@types/*.d.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
